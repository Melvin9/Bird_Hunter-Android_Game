<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.melvin.myapplication.FullscreenActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings"
        android:layout_toEndOf="@+id/settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bird1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nw"/>
    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/credits"
        android:layout_toRightOf="@+id/credits"
        android:background="@android:drawable/ic_menu_manage"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bird1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/border"
        android:text="PLAY"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_help"
        android:textColor="@android:color/transparent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/help"
        android:layout_toRightOf="@+id/help"
        android:background="@drawable/businessman"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/shoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="gravity"
        app:srcCompat="@drawable/shoot" />

    <ImageView
        android:id="@+id/bird1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shoot"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/bullet"
        android:layout_toRightOf="@+id/bullet"
        app:srcCompat="@drawable/birdfly" />

    <ImageView
        android:id="@+id/bird2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bullet"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/bird1"
        android:layout_toRightOf="@+id/bird1"
        app:srcCompat="@drawable/birdfly" />

    <ImageView
        android:id="@+id/bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/play"
        android:layout_toRightOf="@+id/play"
        app:srcCompat="@drawable/b1" />

    <ImageButton
        android:id="@+id/ret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView4"
        android:layout_toEndOf="@+id/settings"
        android:layout_toRightOf="@+id/settings"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</RelativeLayout>
